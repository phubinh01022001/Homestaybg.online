<div class='mt-4' style="padding-top: 50px;">
  <div class="bk" style="height: 500px; width: 1295px">
    <img src="https://bcp.cdnchinhphu.vn/334894974524682240/2022/9/12/nha-chung-cu-16629517441581660227438.jpg" style="height: 100%;width: 100%;border-radius:50px 50px 50px 50px;">
  </div>

  <div class='row mt-3' >
    {{#each home}}
      <div class='col-sm-6 col-lg-4'>
        <div class='card card-couser-item'>
          <a href='/homes/{{this.slug}}' style="height: 300px;">
            <img src="/homes/images/{{this.image}}" class='card-img-top' style="height: 100%;"/>
          </a>
          <div class='card-body' style="height: 480px;">
            <a href='/homes/{{this.slug}}'>
              <h5 class='card-text'>{{this.name}}</h5>
            </a>
            <p class='card-text'><b>Diện tích: </b>{{this.area}} m2</p>
            <p class='card-text'>{{this.description}}</p>
            <p class='card-text'><b>Giá:</b> {{this.price}} /m2</p>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>