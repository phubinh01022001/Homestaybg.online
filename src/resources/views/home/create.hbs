            <option value="Hà Nội">Hà Nội</option>
            <option value="Bến Tre">Bến Tre</option>
          </select>
        </div>
        <div class='mb-3'>
          <label for='addDetail' class='form-label'>Địa chỉ cụ thể</label>
          <input type='text' class='form-control' id='addDetail' name='addDetail'  placeholder="Địa chỉ cụ thể" />
          </textarea>
        </div>
