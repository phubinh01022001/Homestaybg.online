<div class='mt-4' style="padding-top: 50px;">
  <div class="bk" style="height: 500px; width: 1295px">
    <img src="https://neohouse.vn/wp-content/uploads/2020/03/biet-thu-dep-3-tang-hien-dai-bia.jpg" style="height: 100%;width: 100%;border-radius:50px 50px 50px 50px;">
  </div>

  <div class='row mt-4'>

    {{#each home}}
      <div class='col-sm-6 col-lg-4'>
        <div class='card card-couser-item'>
          <a href='/homes/{{this.slug}}' style="height: 300px;">
            <img src='/homes/images/{{this.image}}' class='card-img-top'  style="height: 100%;" alt='{{this.image}}'/>
          </a>
          <div class='card-body'  style="height: 480px;">
            <a href='/homes/{{this.slug}}'>
              <h5 class='card-text'>{{this.name}}</h5>
            </a>
            <p class='card-text'><b>Diện tích: </b>{{this.area}} m2</p>
            <p class='card-text'>{{this.description}}</p>
            <p class='card-text'><b>Giá:</b> {{this.price}} vnđ</p>
            {{!-- <a href='/homes/{{this.slug}}' class='btn btn-primary'>Xem</a> --}}
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>